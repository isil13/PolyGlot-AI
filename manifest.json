{
    "manifest_version": 3,
    "name": "Polyglot - AI Code Translator",
    "version": "1.0",
    "description": "Yapay zeka destekli anlık kod çeviri aracı.",
    "icons": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "index.html",
        "default_icon": {
            "16": "icon.png",
            "48": "icon.png",
            "128": "icon.png"
        }
    },
    "permissions": [
        "contextMenus",
        "storage",
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "https://api.groq.com/*"
    ]
}